from tkinter import *
import pandas
import random

BACKGROUND_COLOR = "#B1DDC6"
random_card = {}
data_dict = {}

try:
    data = pandas.read_csv("./data/words_to_learn.csv")
except FileNotFoundError:
    full_data = pandas.read_csv("./data/french_words.csv")
    data_dict = full_data.to_dict(orient="records")
else:
    data_dict = data.to_dict(orient="records")

def next_card():
    global random_card, flip_timer
    window.after_cancel(flip_timer)
    random_card = random.choice(data_dict)
    canvas.itemconfig(top_text, text="French", fill="black")
    canvas.itemconfig(bot_text, text=random_card["French"], fill="black")
    canvas.itemconfig(front_image, image=front_flashcard_img)
    flip_timer= window.after(3000, func=flip_card)

def flip_card():
    canvas.itemconfig(top_text, text= "English", fill="white")
    canvas.itemconfig(bot_text, text=random_card["English"], fill="white")
    canvas.itemconfig(front_image, image=back_flashcard_img)

def remove_card():
    data_dict.remove(random_card)
    data = pandas.DataFrame(data_dict)
    data.to_csv("data/words_to_learn.csv", index=False)
    next_card()

window = Tk()
window.title("Flashcards")
window.config(padx=50, pady=50, bg=BACKGROUND_COLOR)

flip_timer = window.after(3000, func=flip_card)

front_flashcard_img = PhotoImage(file="./images/card_front.png")
back_flashcard_img = PhotoImage(file="./images/card_back.png")
canvas = Canvas(width=800, height=526, bg=BACKGROUND_COLOR, highlightthickness=0)
front_image = canvas.create_image(400, 263, image=front_flashcard_img)
top_text = canvas.create_text(400, 150, font=("Ariel", 40, "italic"))
bot_text = canvas.create_text(400, 263, font=("Ariel", 60, "bold"))
canvas.grid(column=0, row=0, columnspan= 2)

x_image = PhotoImage(file="./images/wrong.png")
x_button = Button(image=x_image, highlightthickness=0, command=next_card)
x_button.grid(column=0, row=1)

y_image = PhotoImage(file="./images/right.png")
y_button = Button(image=y_image, highlightthickness=0, command=remove_card)
y_button.grid(column=1, row=1)

next_card()

window.mainloop()
