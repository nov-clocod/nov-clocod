import random
#custom art module
from art import logo

def deal_card():
    cards = [11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10]
    card = random.choice(cards)
    return card

def calculate_score(cards):
    if sum(cards) == 21 and len(cards) == 2:
        return 0

    if 11 in cards and sum(cards) > 21:
        cards.remove(11)
        cards.append(1)

    return sum(cards)

def compare(user_score, cpt_score):
    if user_score == cpt_score:
        return "Draw 🙃"
    elif cpt_score == 0:
        return "Lose, opponent has Blackjack 😱"
    elif user_score == 0:
        return "Win with a Blackjack 😎"
    elif user_score > 21:
        return "You went over. You lose 😭"
    elif cpt_score > 21:
        return "Opponent went over. You win 😁"
    elif user_score > cpt_score:
        return "You win 😃"
    else:
        return "You lose 😤"


def blackjack():
    print(logo)
    user_cards = []
    cpt_cards = []
    cpt_score = -1
    user_score = -1
    is_game_over = False

    for _ in range(2):
        user_cards.append(deal_card())
        cpt_cards.append(deal_card())

    while not is_game_over:
        user_score = calculate_score(user_cards)
        cpt_score = calculate_score(cpt_cards)
        print(f"Your cards: {user_cards}, current score: {user_score}")
        print(f"Computer's first card: {cpt_cards[0]}")

        if user_score == 0 or cpt_score == 0 or user_score > 21:
            is_game_over = True
        else:
            another_card = input("Type 'y' to get another card, type 'n' to pass: ")
            if another_card == "y":
                user_cards.append(deal_card())
            else:
                is_game_over = True

    while cpt_score != 0 and cpt_score < 17:
        cpt_cards.append(deal_card())
        cpt_score = calculate_score(cpt_cards)

    print(f"Your final hand: {user_cards}, final score: {user_score}")
    print(f"Computer's final hand: {cpt_cards}, final score: {cpt_score}")
    print(compare(user_score, cpt_score))

while input("Do you want to play a game of Blackjack? Type 'y' or 'n': ") == "y":
    print("\n" * 20)
    blackjack()
