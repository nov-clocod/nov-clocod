#custom art module
import art

def add(n1, n2):
    return n1 + n2

def subtract(n1, n2):
    return n1 - n2

def multiply(n1, n2):
    return n1 * n2

def divide(n1, n2):
    return n1 / n2

operations = {"+": add,
              "-": subtract,
              "*": multiply,
              "/": divide,
}

def calculator():
    print(art.logo)
    calcu = True
    f_nub = float(input("What is the first number?"))
    
    while calcu:
        for symbol in operations:
            print(symbol)
        calc = input("Pick an operation: ")
        snd_nub = float(input("What is the next number?"))
        solution = operations[calc](f_nub, snd_nub)
        print(f"{f_nub} {calc} {snd_nub} = {solution}")

        continue_calc = input(f"Type 'y' to continue calculating with {solution}, "
              f"or type 'n' to start a new calculation")

        if continue_calc == "y":
            f_nub = solution
        else:
            calcu = False
            print("\n" * 100)
            calculator()

calculator()
